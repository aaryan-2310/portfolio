{
    "version": 2,
    "buildCommand": "yarn build",
    "outputDirectory": "dist/browser",
    "functions": {
        "api/ssr.ts": {
            "runtime": "nodejs22.x",
            "includeFiles": "dist/**"
        }
    },
    "rewrites": [
        {
            "source": "/assets/(.*)",
            "destination": "/assets/$1"
        },
        {
            "source": "/(.*\\.(?:js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot|map))",
            "destination": "/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/api/ssr"
        }
    ]
}